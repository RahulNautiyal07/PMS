<%- include('header') %>

      <div class="container">
        <div class="row">
          
          <div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3  col-sm-offset-2">
            <div class="panel panel-info">
              <div class="panel-heading">
                <div class="panel-title">Add New Password Category </div>
                <div style="float:right; font-size: 85%; position:relative;top:-10px">
              </div>
            </div>
              <div class="panel-body">
                <form action="/addPassword" class="form-horizontal" role="form" method="post">
      
                  <% if(success!=''){ %>
                  <p style="text-align: center;color: green;"><%= success %></p>
                  <% } %>
                  <div class="form-group">
                    <label for="username" class="col-md-3 control-label"> Choose Password Category</label>
                    <div class="col-md-9">
                    <select class="form-control " name="pass_cat">
                      <% if(records.length>0){
                      records.forEach(function(row){

                    %>
                      <option value="<%= row.password_category %>"><%= row.password_category %></option>
                      <%   }) }     %>
                    </select>
                    </div>
                  </div>

                   <div class="form-group">
                    <label for="username" class="col-md-3 control-label">Project Name</label>
                    <div class="col-md-9">
                      <input type="text"  class="form-control" name="project"  placeholder=" Enter Your  Project Name"/> 
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="username" class="col-md-3 control-label">Password Details</label>
                    <div class="col-md-9">
                      <textarea  class="form-control" name="pass_details" id="editor1" rows="3" placeholder=" Enter Your Password Detail"></textarea> 
                    </div>
                  </div>
  

      
                  <div class="form-group">
                    <div class="col-md-offset-3 col-md-9">
                      <input type="Submit" type="button" class="btn btn-info" value="Add Password" name="submit"> 	        	
                    </div>
                   </div>
                   <p class="text-center">Already have an account  <a href="/viewPassword">View All Password List</a></p> 
       
                   
                    </form>
                  </div>			
             </div>		
           </div>
         </div>
      </div> 



       <script>
                 CKEDITOR.replace( 'editor1' );
      </script>   
  </body>
</html>
